<%- include('head') %>
<!-- content -->
<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <h3 class="text-uppercase">Get In Touch</h3>
        <div class="m-t-30">
          <form
            action="/mail/send"
            method="post"
          >
            <div class="row">
              <div class="form-group col-md-6">
                <label for="name">Name</label>
                <input
                  type="text"
                  aria-required="true"
                  name="name"
                  required
                  class="form-control required name"
                  placeholder="Enter your Name"
                  id="name"
                />
              </div>
              <div class="form-group col-md-6">
                <label for="email">Email</label>
                <input
                  type="email"
                  aria-required="true"
                  name="email"
                  required
                  class="form-control required email"
                  placeholder="Enter your Email"
                  id="email"
                />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-12">
                <label for="subject">Your Subject</label>
                <input
                  type="text"
                  name="subject"
                  required
                  class="form-control required"
                  placeholder="Subject..."
                  id="subject"
                />
              </div>
            </div>
            <div class="form-group">
              <label for="message">Message</label>
              <textarea
                type="text"
                name="message"
                required
                rows="5"
                class="form-control required"
                placeholder="Enter your Message"
                id="message"
              ></textarea>
            </div>
            <button class="btn btn-primary" type="submit" id="form-submit">
              <i class="fa fa-paper-plane"></i>&nbsp;Send message
            </button>
          </form>
        </div>
      </div>

      <div class="col-lg-6">
        <h3 class="text-uppercase">Address & Map</h3>
        <div class="row">
          <div class="col-lg-6">
            <div class="widget">
              <h4>Contact</h4>
              <ul class="list-icon">
                <li>
                  <i class="far fa-envelope"></i>
                  <a href="mailto:first.last@example.com"
                    >first.last@example.com</a
                  >
                </li>
                <li><i class="fa fa-phone"></i> (123) 456-7890</li>
                <li><i class="fa fa-phone"></i> (123) 456-7890</li>
              </ul>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="widget">
              <h4>Address</h4>
              <ul class="list" style="padding: 0px">
                <li>
                  795 Folsom Ave, Suite 600 <br />
                  San Francisco, CA 94107
                </li>
              </ul>
            </div>
          </div>
        </div>
        <!-- Google Map -->
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7441.197782884824!2d72.8286504239226!3d21.168355192008793!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be04f2cb3c6b8f7%3A0x51dbf6d6ece6b8c9!2sSatkar%20restaurant!5e0!3m2!1sen!2sin!4v1695188595176!5m2!1sen!2sin"
          class="map"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
        <!-- end: Google Map -->
      </div>
    </div>
  </div>
</section>
<!-- end: Content -->
<%-include('footer') %>
